    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_sure_vertify"
        android:layout_marginTop="@dimen/new_735px"
        android:orientation="horizontal"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_agree"
            android:textSize="@dimen/new_32px"
            android:textColor="@color/cAAAAAA"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/softwareservice"
            android:textColor="@color/c00AC38"
            android:textSize="@dimen/new_32px"
            />
