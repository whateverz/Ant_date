<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        layout="@layout/title_login"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/new_222px"
        android:layout_height="@dimen/new_222px"
        android:layout_marginTop="@dimen/new_199px"
        android:src="@mipmap/app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="@dimen/new_36px"
        android:layout_height="@dimen/new_48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_mobile"
        android:layout_marginTop="@dimen/new_570px"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="@dimen/new_137px"
        />
    <TextView
        android:layout_width="@dimen/new_180px"
        android:layout_height="@dimen/new_65px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/new_561px"
        android:gravity="center"
        android:textSize="@dimen/new_48px"
        android:paddingTop="6px"
        android:text="验证码"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="@dimen/new_203px"
        />
    <ImageView
        android:layout_width="@dimen/new_82px"
        android:layout_height="@dimen/new_65px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/new_664px"
        android:src="@mipmap/default_photo"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="@dimen/new_637px"
        />
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="@dimen/new_806px"
        android:layout_height="@dimen/new_65px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/new_674px"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/new_137px"
        android:hint="在这儿输入验证码"
        tools:ignore="MissingConstraints"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/new_137px"
        />
    <TextView
        android:id="@+id/tv_send_vertify"
        android:layout_width="@dimen/new_306px"
        android:layout_height="@dimen/new_84px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/new_674px"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/new_137px"
        tools:ignore="MissingConstraints"
        android:src="@mipmap/default_photo"
        android:layout_marginLeft="@dimen/new_637px"
        />
    <ImageView
        android:layout_width="@dimen/new_806px"
        android:layout_height="@dimen/new_1px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/new_752px"
        android:background="@color/a_main_tab_normal"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="@dimen/new_137px"
        android:layout_marginLeft="@dimen/new_137px"
        />
    <Button
        android:id="@+id/btn_sure_vertify"
        android:layout_width="@dimen/new_806px"
        android:layout_height="@dimen/new_120px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/new_883px"
        android:text="确定"
        android:background="@mipmap/bg_btn_login"
        android:textColor="@color/white"
        android:textSize="@dimen/new_48px"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="@dimen/new_137px"
        android:layout_marginLeft="@dimen/new_137px"
        />
