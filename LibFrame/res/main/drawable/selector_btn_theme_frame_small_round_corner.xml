<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/white" android:state_pressed="true">

        <shape>
            <solid android:color="@color/theme_color" />
            <stroke android:width="1px" android:color="@color/theme_color" />
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
        </shape>
    </item>

    <item android:color="@color/theme_color">
        <shape>
            <solid android:color="@color/transparent" />
            <stroke android:width="1px" android:color="@color/theme_color" />

            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
        </shape>
    </item>
</selector>