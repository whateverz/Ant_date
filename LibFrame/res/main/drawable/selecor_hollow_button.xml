<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/white" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/new_12px" />
            <solid android:color="@color/theme_color" />
            <stroke android:width="@dimen/new_1px" android:color="@color/theme_color" />
            <padding android:bottom="@dimen/new_1px" android:left="@dimen/new_1px" android:right="@dimen/new_1px" android:top="@dimen/new_1px" />
        </shape>
    </item>
    <item android:color="@color/black_54per" android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/new_12px" />
            <solid android:color="@color/transparent" />
            <stroke android:width="@dimen/new_1px" android:color="@color/black_54per" />
            <padding android:bottom="@dimen/new_1px" android:left="@dimen/new_1px" android:right="@dimen/new_1px" android:top="@dimen/new_1px" />
        </shape>
    </item>
    <item android:color="@color/theme_color">
        <shape>
            <corners android:radius="@dimen/new_12px" />
            <solid android:color="@color/transparent" />
            <stroke android:width="@dimen/new_1px" android:color="@color/theme_color" />
            <padding android:bottom="@dimen/new_1px" android:left="@dimen/new_1px" android:right="@dimen/new_1px" android:top="@dimen/new_1px" />
        </shape>
    </item>
</selector>