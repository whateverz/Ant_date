<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/theme_color" android:state_pressed="true">
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/new_1px" android:color="@color/theme_color" />
            <padding android:bottom="@dimen/new_100px" android:left="@dimen/new_100px" android:right="@dimen/new_100px" android:top="@dimen/new_100px" />
        </shape>
    </item>
    <item android:color="@color/white">
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/transparent" />
            <stroke android:width="@dimen/new_1px" android:color="@color/white" />
            <padding android:bottom="@dimen/new_100px" android:left="@dimen/new_100px" android:right="@dimen/new_100px" android:top="@dimen/new_100px" />
        </shape>
    </item>
</selector>