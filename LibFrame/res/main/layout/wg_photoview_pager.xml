<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/wg_photoview_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/dlg_photoview_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <lib.frame.view.widget.WgPhotoViewPager
        android:id="@+id/wg_photoview_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/dlg_photoview_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black_24per" />

    <lib.frame.view.widget.WgActionBarBase
        android:id="@+id/dlg_photoview_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_h"
        android:layout_below="@+id/dlg_photoview_space"
        android:background="@color/black_24per"
        android:fitsSystemWindows="true"
        app:actionImgLeft="@mipmap/back" />

    <!--<me.zhanghai.android.materialprogressbar.MaterialProgressBar-->
    <!--android:id="@+id/dlg_photoview_progressbar"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true" />-->
</RelativeLayout>