<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dlg_time_picker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff00ff"
        android:gravity="center"
        android:text="@string/time_select"
        android:textColor="#ffffffff"
        android:textSize="@dimen/new_26px" />

    <LinearLayout
        android:id="@+id/timepicker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <lib.frame.view.pickerview.lib.WheelView
            android:id="@+id/dlg_time_picker_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <lib.frame.view.pickerview.lib.WheelView
            android:id="@+id/dlg_time_picker_hour"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5" />

        <lib.frame.view.pickerview.lib.WheelView
            android:id="@+id/dlg_time_picker_min"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5" />
    </LinearLayout>

    <TextView
        android:id="@+id/dlg_time_picker_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff00ff"
        android:gravity="center"
        android:text="@string/confirm"
        android:textSize="@dimen/new_26px" />

</LinearLayout>